{
  "compilerOptions": {
    "types": [
      "@types/node",
      "@nuxt/vue-app",
      "@types/jest"
    ],
    "target": "es2018",
    "jsx": "preserve",
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": false,
    "allowJs": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "/dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "files": [
    "shims-vue.d.ts",
    "shims-gql.d.ts"
  ],
  "include": [
    "apollo/queries/*.gql",
    "apollo/queries/**/*.gql"
  ]
}
